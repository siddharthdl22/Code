// Input the height of the pattern
// Print the pattern
// #
// ##
// ###
// ####
// #####

public static void Pyramid(int n)
	{
		for(int i = 0; i < n; i++)
		{
			for(int j = 0; j < n; j++)
			{
				if(n % 2 == 0)
				{
					if(i - j >= 0)
						System.out.print("#");
					else
						System.out.print(" ");
				}
				else
				{
					
				}
			}
			System.out.print("\n");
		}
	}
