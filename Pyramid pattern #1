// Input the height
// Print the following pattern
//    #
//   ##
//  ###
// ####
//#####

public static void Pyramid(int n)
	{
		for(int i = 0; i < n; i++)
		{
			for(int j = 0; j < n; j++)
			{
				if(i + j >= n - 1)
					System.out.print("#");
				else
					System.out.print(" ");
			}
			System.out.print("\n");
		}
	}
