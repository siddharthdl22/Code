class Node
{
       int data;
       Node left;
       Node right;
}      

int height(Node root)
    {
         if(root == null)
             return 0;
         else
         {
            if(height(root.left) > height(root.right))
                return 1 + height(root.left);
             else
                 return 1 + height(root.right);
         }
    }
