
public int maxRepeating(int[] arr)
	{
	    int len = arr.length;
	    for(int i = 0; i < len; i++)
	        arr[arr[i] % len] = arr[arr[i] % len] + len;
	 
	    int maxSum = arr[0]
	    int index = 0;
	    for (int i = 1; i < len; i++)
	    {
	        if (arr[i] > maxSum)
	        {
	            maxSum = arr[i];
	            index = i;
	        }
	    }
	 
	    for (int i = 0; i< len; i++)
	        arr[i] = arr[i] % k;
	 
	    return arr[i];
	}
